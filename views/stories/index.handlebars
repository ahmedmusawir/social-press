<h1>Stories</h1>
<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        {{#if user}}
        {{{editIcon user.id ../user.id id}}}
        {{!-- user.id cuz it's inside a stories loop scope --}}
        {{!-- ../user.id cuz accessing the global user scope inside the #each loop. See Global Vars in app.js --}}
        {{!-- id is story.id which is inside a stories each loop --}}
        {{/if}}
      </div>
      <div class="card-content center-align">
        <h5 class="story-title">{{title}}</h5>
        <div class="story-time center-align">
          <small>Posted: {{formatDate date 'MMMM Do YYYY'}}</small>
        </div>
        <br>
        <p class="story-text">{{stripTags (truncate body 150)}}</p>
        <br>
        <br>
        <a href="/stories/user/{{user.id}}">
          <div class="chip">
            <img src="{{user.image}}" alt="Contact Person">
            {{user.firstName}} {{user.lastName}}
          </div>
        </a>
      </div>
      <div class="card-action center-align">
        <a href="/stories/show/{{id}}" class="btn grey"><i class="fa fa-book"></i>Read More</a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No Stories Found.</p>
  {{/each}}
</div>